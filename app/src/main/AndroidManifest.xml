<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rush_hour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="Rush Hour"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rush_hour">
        <activity
            android:name=".Controller.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Controller.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Controller.LevelListActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Controller.CurrentLevel"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Controller.RulesActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Controller.ScoresActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

    </application>
</manifest>